<h1> Here will display all student data from database</h1>

@model List<Student>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Modify</th>
        <th>Delete</th>
    </tr>
    @foreach (Student item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.name</td>
            <td>@item.email</td>
            <td>@item.phone</td>
            <td><a asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a></td>
            <td>
                <a asp-action="Delete" asp-controller="Student" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this student?')">Delete</a>
            </td>
        </tr>
    }
</table>
